{
  "name": "beaconglyphs",
  "version": "1.0.0",
  "description": "Visual and symbolic language system for the MirrorDNA ecosystem",
  "main": "packages/react/src/index.js",
  "types": "packages/react/src/index.d.ts",
  "files": [
    "assets/",
    "packages/",
    "registry/",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "validate": "python scripts/validate_registry.py",
    "test": "pytest tests/",
    "build": "tsc",
    "lint": "eslint packages/react --ext .ts,.tsx",
    "format": "prettier --write \"packages/**/*.{ts,tsx,css}\"",
    "docs": "typedoc --out docs-api packages/react"
  },
  "keywords": [
    "beaconglyphs",
    "mirrordna",
    "glyphs",
    "icons",
    "symbols",
    "continuity",
    "identity",
    "design-system",
    "react",
    "typescript"
  ],
  "author": "MirrorDNA-Reflection-Protocol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MirrorDNA-Reflection-Protocol/BeaconGlyphs.git"
  },
  "bugs": {
    "url": "https://github.com/MirrorDNA-Reflection-Protocol/BeaconGlyphs/issues"
  },
  "homepage": "https://github.com/MirrorDNA-Reflection-Protocol/BeaconGlyphs#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typedoc": "^0.25.0"
  },
  "exports": {
    ".": {
      "import": "./packages/react/src/index.js",
      "require": "./packages/react/src/index.js",
      "types": "./packages/react/src/index.d.ts"
    },
    "./react": {
      "import": "./packages/react/src/index.js",
      "require": "./packages/react/src/index.js",
      "types": "./packages/react/src/index.d.ts"
    },
    "./css": "./packages/css/beacon-glyphs.css",
    "./tokens": "./packages/css/tokens.css",
    "./registry": "./registry/glyphs.json",
    "./schema": "./registry/schema.json"
  }
}
